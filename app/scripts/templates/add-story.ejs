<div class="titles">
  <a href="#admin"><p class="back"><i class="fa fa-arrow-circle-o-left"></i> Back</p></a>
  <h3><i class="fa fa-plus-square"></i> Add story</h3>
</div>
<form id="add-story">
    <div class="row">
    <div class="large-12 columns">
      <label>Story Title
        <input type="text" name="title" placeholder="Title of your story" />
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label>Description
        <textarea style="height:200px" name="description" placeholder="Your story goes here..."></textarea>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
       <input type="submit" class="button success" value="Save"/>
    </div>
  </div>
</form>

